<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ScoreRangeCheckInputRule</fullName>
    <active>true</active>
    <description>Only allow input of numbers from 1 to 10</description>
    <errorConditionFormula>Score__c  &lt; 0 ||  Score__c &gt; 10</errorConditionFormula>
    <errorDisplayField>Score__c</errorDisplayField>
    <errorMessage>Enter only numbers between 1 and 10.</errorMessage>
</ValidationRule>
